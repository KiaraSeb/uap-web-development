    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/next": "^9.0.0",
    "@types/react-dom": "^19.1.6",
    "@types/sqlite3": "^5.1.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.81.2",
    "@types/react-router-dom": "^5.3.3",
