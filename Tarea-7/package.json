{
  "name": "tarea-7-fullstack",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite --config vite.config.ts",
    "dev:backend": "nodemon --watch src/backend --ext ts --exec node_modules/.bin/tsx src/backend/index.ts",
